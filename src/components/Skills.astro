---
import { getResumeData } from '../lib/resumeData';

const resumeData = await getResumeData();
const { systemsSoftware, developmentSoftware } = resumeData;
---

<section id="skills" class="py-12 md:py-20 bg-(--color-bg-secondary)">
  <div class="max-w-6xl mx-auto px-4 md:px-8">
    <h2 class="text-2xl md:text-3xl font-bold text-(--color-text-primary) mb-8 pb-4 border-b border-(--color-border) relative after:content-[''] after:absolute after:bottom-[-2px] after:left-0 after:w-16 after:h-1 after:bg-(--color-accent)">Systems Software</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 mb-12" id="systems-software-grid">
      {systemsSoftware.map((skill) => (
        <div class="bg-(--color-bg-tertiary) rounded-lg p-4 text-center border border-(--color-border) transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:border-(--color-accent)">
          <div>
            <h4 class="text-sm font-semibold text-(--color-text-primary) mb-1">{skill.name}</h4>
            <p class="text-xs text-(--color-text-muted)">{skill.years}</p>
          </div>
        </div>
      ))}
    </div>

    <h2 class="text-2xl md:text-3xl font-bold text-(--color-text-primary) mb-8 pb-4 border-b border-(--color-border) relative after:content-[''] after:absolute after:bottom-[-2px] after:left-0 after:w-16 after:h-1 after:bg-(--color-accent)">Development Software</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4" id="development-software-grid">
      {developmentSoftware.map((skill) => (
        <div class="bg-(--color-bg-tertiary) rounded-lg p-4 text-center border border-(--color-border) transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:border-(--color-accent)">
          <div>
            <h4 class="text-sm font-semibold text-(--color-text-primary) mb-1">{skill.name}</h4>
            <p class="text-xs text-(--color-text-muted)">{skill.years}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
